<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>src-javascript</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${basedir}/target/dependency/cdf/cdf</directory>
      <outputDirectory>cdf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/target/dependency/cdf/lib</directory>
      <outputDirectory>cdf/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/target/dependency/ccc/amd</directory>
      <outputDirectory>cdf/lib/CCC</outputDirectory>
    </fileSet>
  </fileSets>

</assembly>
